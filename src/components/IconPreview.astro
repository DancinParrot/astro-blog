---
import type {SvgComponent} from "astro/types";

interface Props {
  image: SvgComponent;
  title: string;
  description: string;
  url: string;
}

const { image, title, description, url } = Astro.props;

const Logo = image;
---

<a href={url} target="_blank" class="flex justify-between gap-6 rounded-lg">
  <div>
    <h3 class="font-semibold text-sm text-gray-800 dark:text-white">{title}</h3>
    <p class="mt-1 text-sm text-gray-400 dark:text-stone-300">
      {description}
    </p>
  </div>
  <div class="flex items-center">
    <Logo width={32} height={32} class="dark:fill-white content-center" />
  </div>
</a>
