---
interface Props {
  dateRange: string;
  title: string;
  description: string;
  content: string;
}

const { dateRange, title, description, content } = Astro.props;
const bulletPoints = content.split(/\r?\n|\r|\n/g);
---

<div class="group relative flex gap-x-5">
  <!-- Icon -->
  <div
    class="relative group-last:after:hidden after:absolute after:top-8 after:bottom-2 after:start-3 after:w-px after:-translate-x-[0.5px] after:bg-gray-200"
  >
    <div class="relative z-10 size-6 flex justify-center items-center">
      <div class="size-2 rounded-full bg-gray-400"></div>
    </div>
  </div>
  <!-- End Icon -->

  <!-- Content -->
  <div class="grow pb-8 group-last:pb-0">
    <h3 class="mb-1 text-xs text-gray-600">{dateRange}</h3>

    <p class="font-semibold text-sm text-gray-800">
      {title}
    </p>

    <p class="mt-1 text-sm text-gray-600">
      {description}
    </p>

    <ul class="list-disc ms-6 mt-3 space-y-1.5">
      {
        bulletPoints.map((point) => (
          <li class="ps-1 text-sm text-gray-600">{point}</li>
        ))
      }
    </ul>
  </div>
  <!-- End Content -->
</div>
